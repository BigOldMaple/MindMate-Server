{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ES2020"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": ".",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "services/**/*.ts",
      "Database/**/*.ts"
    ],
    "exclude": ["node_modules"]
  }